<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/profession_green"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:text="Industry:"
            style="@style/ProfileTxtKey"/>

        <TextView
            android:id="@+id/txt_industry"
            style="@style/ProfileTxtValue"
            tools:text="Services" />

        <TextView
            android:id="@+id/textView3"
            style="@style/ProfileTxtKey"
            android:text="Category"
            android:layout_below="@id/textView"/>

        <TextView
            android:id="@+id/txt_category"
            style="@style/ProfileTxtValue"
            tools:text="Telecom:"
            android:layout_below="@id/txt_industry"/>

        <TextView
            android:id="@+id/textView4"
            style="@style/ProfileTxtKey"
            android:text="Profession:"
            android:layout_below="@id/textView3"/>

        <TextView
            android:id="@+id/txt_profession"
            style="@style/ProfileTxtValue"
            tools:text="Antenna repair"
            android:layout_below="@id/txt_category"/>


    </RelativeLayout>

</FrameLayout>