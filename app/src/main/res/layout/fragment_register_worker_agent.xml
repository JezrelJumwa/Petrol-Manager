<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/national_id"
            android:textColor="@color/dark_color"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/national_id"
            style="@style/EditTextStyle"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/confirm_national_id"
            android:textColor="@color/dark_color"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/confirm_national_id"
            style="@style/EditTextStyle"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/phone_number"
            android:textColor="@color/dark_color"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/phone_number"
            style="@style/EditTextStyle"
            android:inputType="phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/county"
            android:textColor="@color/dark_color"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/grp_county"
            style="@style/SpinnerLayoutStyle"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_county_selection"
                style="@style/SpinnerTextViewStyle"
                android:text="@string/select_county"/>

            <ImageView
                style="@style/SpinnerImageViewStyle"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sub_county"
            android:textColor="@color/dark_color"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/grp_sub_county"
            style="@style/SpinnerLayoutStyle"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_sub_county_selection"
                style="@style/SpinnerTextViewStyle"
                android:text="@string/select_sub_county"/>

            <ImageView
                style="@style/SpinnerImageViewStyle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/gray"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/industry"
                android:textColor="@color/dark_color"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/grp_industry"
                style="@style/SpinnerLayoutStyle"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_industry_selection"
                    style="@style/SpinnerTextViewStyle"
                    android:text="@string/select_industry"/>

                <ImageView
                    style="@style/SpinnerImageViewStyle"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/category"
                android:textColor="@color/dark_color"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/grp_category"
                style="@style/SpinnerLayoutStyle"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_category_selection"
                    style="@style/SpinnerTextViewStyle"
                    android:text="@string/select_category"/>

                <ImageView
                    style="@style/SpinnerImageViewStyle"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/profession"
                android:textColor="@color/dark_color"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/grp_profession"
                style="@style/SpinnerLayoutStyle"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_profession_selection"
                    style="@style/SpinnerTextViewStyle"
                    android:text="@string/select_profession"/>

                <ImageView
                    style="@style/SpinnerImageViewStyle"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/add_another_profession"
            style="@style/ButtonLinkStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/add_another_profession"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/pin_code"
            android:textColor="@color/dark_color"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/pin_code"
            style="@style/EditTextStyle"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/confirm_pin_code"
            android:textColor="@color/dark_color"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/confirm_pin_code"
            style="@style/EditTextStyle"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/referral_code"
            android:textColor="@color/dark_color"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/referral_code"
            style="@style/EditTextStyle"
            android:inputType="number"/>

        <Button
            android:id="@+id/register"
            style="@style/ButtonGreenStyle"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/register"/>

    </LinearLayout>

</ScrollView>

