<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" >
        <shape  android:shape="oval" >
            <stroke android:width="2dp" android:color="@color/text_gray_1"/>
            <size android:width="18dp" android:height="18dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/green_color"/>
                    <size android:width="18dp" android:height="18dp"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="oval">
                    <solid android:width="1dp" android:color="@color/green_color"/>
                    <size android:width="9dp" android:height="9dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>